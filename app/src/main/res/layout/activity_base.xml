    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"/>

</RelativeLayout>
