        <activity android:name="com.hongyan.anim.AnimationActivity" />
        <activity android:name="com.hongyan.activity.UtilActivity" />
        <activity android:name="com.hongyan.res.drawable.UILayerListActivity" />
        <activity android:name="com.hongyan.res.drawable.InsetDrawableActivity" />
        <activity android:name="com.hongyan.activity.CustomViewActivity" />
        <activity android:name="com.hongyan.activity.CustomDialogActivity" />
        <activity android:name="com.hongyan.activity.CanvasActivity" />
        <activity android:name="com.hongyan.activity.PayActivity" />
    </application>

</manifest>